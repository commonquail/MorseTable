<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:custom="http://schemas.android.com/apk/res/com.morsetable">
    <style name="dit">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/dit_key_selector</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">setMorseCode</item>
        <item name="code">@string/dit</item>
        <item name="parentState">@drawable/dit_key_pressed_parent</item>
        <item name="pressedState">@drawable/dit_key_pressed</item>
        </style>

    <style name="dah" parent="style/dit">
        <item name="android:background">@drawable/dah_key_selector</item>
        <item name="code">@string/dah</item>
        <item name="parentState">@drawable/dah_key_pressed_parent</item>
        <item name="pressedState">@drawable/dah_key_pressed</item>
    </style>
    
    <style name="spacer" parent="style/dit">
        <item name="android:enabled">false</item>
        <item name="android:background">@android:color/black</item>
    </style>
    
    <style name="code">
        <item name="android:textColor">@color/code</item>
        <item name="android:textSize">30dp</item>
    </style>
</resources>
